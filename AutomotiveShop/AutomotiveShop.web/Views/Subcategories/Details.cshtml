@model AutomotiveShop.model.Subcategory

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdministrator = User.IsInRole("Administrator");
}

<h2>@Model.Name</h2>

<div>
    <ul>
        @foreach (var product in Model.Products)
        {
            <li>@Html.ActionLink(@product.Name, "Details", "Products", new {productId = product.ProductId}, null)</li>
        }
    </ul>

</div>
<p>
    @if (isAdministrator)
    {
        @Html.ActionLink("Create product", "Create", "Products", new { subcategoryId = Model.SubcategoryId }, new { @class = "btn btn-primary btn-xs" })
        @Html.Raw(" |")
    }
    @Html.ActionLink("Edit", "Edit", new { subcategoryId = Model.SubcategoryId }, new { @class = "btn btn-primary btn-xs" }) |
    @Html.ActionLink("Delete", "Delete", new { subcategoryId = Model.SubcategoryId }, new { @class = "btn btn-primary btn-xs" }) |
    @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-primary btn-xs" })
</p>
