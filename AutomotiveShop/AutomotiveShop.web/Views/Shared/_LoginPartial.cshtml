@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
<ol>
    @{
        string linkStyle = User.IsInRole("Administrator") ? "color: #00ff00;" : "color:#ffffff";
    }
    <li style="width: 290px;">
        @Html.ActionLink("Witaj " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @style = @linkStyle })
        @if (User.IsInRole("Administrator"))
        {
            <ul>
                <li style="border-top: 2px solid black; border-bottom: 2px solid black;">
                    @Html.Raw("Manage:")
                </li>
                <li style="border-top: none;">

                </li>
                <li>

                </li>
            </ul>

        }
    </li>
    <li id="cartButton">@Html.ActionLink("Koszyk", "Index", "Orders")</li>
    <li>
        <input type="submit" value="Wyloguj się" style="width: 100px" />
    </li>
</ol>
    }
}
else
{
    <ol>
        <li>@Html.ActionLink("Zarejestruj", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Zaloguj", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li id="cartButton">@Html.ActionLink("Koszyk", "Index", "Orders")</li>
    </ol>
}